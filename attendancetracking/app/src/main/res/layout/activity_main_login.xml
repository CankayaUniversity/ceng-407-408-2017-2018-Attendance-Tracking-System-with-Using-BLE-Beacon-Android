<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientback"
    tools:context="seniorproject.attendancetrackingsystem.MainActivity" >


    <Button
        android:id="@+id/lecturer_login"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="160dp"
        android:layout_height="43dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/student_login"
        android:layout_marginEnd="13dp"
        android:text="Lecturer Logın"
        android:textSize="15dp"
        android:textColor="#fff"
        android:background="@drawable/button_border"/>

    <Button
        android:id="@+id/student_login"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="160dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginStart="15dp"
        android:layout_marginTop="126dp"
        android:text="Student Logın"
        android:textSize="15dp"
        android:textColor="#fff"
        android:background="@drawable/button_border"/>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="144dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        app:srcCompat="@drawable/logo" />
</RelativeLayout>
